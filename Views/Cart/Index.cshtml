@model List<SimpleShop.Models.Product>

@{
    ViewData["Title"] = "Shopping Cart";
    decimal total = Model.Sum(x => x.Price);
}

<h2>Your Shopping Cart</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">Your cart is empty. <a asp-controller="Home" asp-action="Index">Go shopping!</a></div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>$@item.Price</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td class="text-end"><strong>Total:</strong></td>
                <td><strong>$@total</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
    
    <div class="text-end">
        <button class="btn btn-success" onclick="alert('Checkout Logic implemented later!')">Checkout</button>
    </div>
}